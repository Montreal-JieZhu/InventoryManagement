@model InventoryManagement.ViewModels.ChooseProductViewModel

@{
    ViewBag.Title = "ChooseProduct";
    Layout = "~/Views/Shared/_MyMasterLayout.cshtml";
}

<h2>Please Choose a Product</h2>

@using (Html.BeginForm("New", "WorkOrder"))
{


    <div class="panel">

        <div class="panel-body">


            <div class="form-group">
                @Html.LabelFor(m => m.SelectedProductID)
                @Html.DropDownListFor(m => m.SelectedProductID, new SelectList(Model.Products, "ID", "DisplayName"), "Please select a Product", new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.SelectedProductID)
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Quantity)
                @Html.TextBoxFor(m => m.Quantity, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Quantity)

            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-2 col-md-offset-10">
            <button type="submit" class="btn btn-default">Choose</button>
        </div>
    </div>


}

